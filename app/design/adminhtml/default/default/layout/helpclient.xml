<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addJs"><file>help/helpclient.js</file></action>
            <action method="addItem"><type>skin_css</type><name>helpclient.css</name></action>
            <action method="addItem">
                <type>js_css</type>
                <name>prototype/windows/themes/default.css</name>
            </action>
            <action method="addCss">
                <name>lib/prototype/windows/themes/magento.css</name>
            </action>
        </reference>
        <reference name="menu">
            <action method="setTemplate">
                <template>helpclient/page/menu.phtml</template>
            </action>
        </reference>
    </default>
</layout>

